INC_DIR = -I$(ROOT_DIR)/chapter1 -I$(ROOT_DIR)/chapter2/section2 -I$(ROOT_DIR)/chapter2/section5 -I$(ROOT_DIR)/chapter2/section4 -I$(ROOT_DIR)/chapter2/section3 -I../section1 -I../section3 -I../section4 -I../section5 -I../section6 -I../section7 .

all: TCPstockThreadServer

TCPstockThreadServer.o: TCPstockThreadServer.C 
	CC $(INC_DIR) -DUNIX -c TCPstockThreadServer.C -g -o TCPstockThreadServer.o

TCPstockThreadServer: TCPstockThreadServer.o
	CC -o TCPstockThreadServer ../section3/XPCGetProtocol.o ../section4/XPCGetHostInfo.o $(ROOT_DIR)/chapter2/section5/XPCWaitPid.o $(ROOT_DIR)/chapter2/section2/XPCSignal.o ../section5/XPCGetService.o ../section6/XPCSocket.o $(ROOT_DIR)/chapter2/section3/XPCSemaphore.o $(ROOT_DIR)/chapter2/section4/XPCPthread.o ../section7/XPCTcpSocket.o TCPstockThreadServer.o -lpthread -lposix4 -lsocket -lnsl -Bdynamic -lc
